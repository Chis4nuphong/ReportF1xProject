   <!-- ตารางจาก ฐานข้อมูล -->
<div class="container">
    <% if (repairs && repairs.length > 0) { %>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>ผู้แจ้ง</th>
                    <th>แจ้งปัญหา</th>
                    <th>รายละเอียดงาน</th>
                    <th>สถานที่แจ้ง</th>
                    <th>การดำเนินการ</th>
                </tr>
            </thead>
            <tbody>            
                <% repairs.forEach((repair) => { %>
                    <!-- เเสดงข้อมูล -->
                    <tr> 
                        <td><%= repair.reporterName %></td>
                        <td><%= repair.problemDescription %></td>
                        <td><%= repair.jobDetails %></td>
                        <td><%= repair.location %></td>
                        <td>
                            <% if (repair.status === "กำลังซ่อม") { %>
                                <span class="badge badge-warning">กำลังซ่อม</span>
                            <% } else if (repair.status === "เสร็จแล้ว") { %>
                                <span class="badge badge-success">เสร็จแล้ว</span>
                            <% } %>
                            
                            
                            <!-- ลบข้อมูล -->
                            <form action="/delete/<%= repair.id %>" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>

                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No repairs found.</p>
    <% } %>
</div>

    
